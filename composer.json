{
  "name": "nexus-logistics/core",
  "description": "Industrial Logistics Management System - Hexagonal Architecture",
  "type": "project",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": ">=8.3",
    "doctrine/dbal": "^3.0",
    "doctrine/doctrine-bundle": "^2.18",
    "doctrine/doctrine-migrations-bundle": "^3.7",
    "doctrine/orm": "^3.0",
    "nelmio/api-doc-bundle": "^5.9",
    "symfony/asset": "^7.4",
    "symfony/dotenv": "^7.4",
    "symfony/framework-bundle": "6.4.*",
    "symfony/messenger": "6.4.*",
    "symfony/redis-messenger": "^5.4",
    "symfony/runtime": "^6.4",
    "symfony/serializer-pack": "^1.3",
    "symfony/twig-bundle": "^7.4",
    "symfony/uid": "6.4.*",
    "zircote/swagger-php": "^5.7"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.10",
    "vimeo/psalm": "^5.20"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "symfony/runtime": true
    },
    "sort-packages": true
  }
}
